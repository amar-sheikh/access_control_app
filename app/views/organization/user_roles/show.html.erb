<% content_for :title, "Role: #{@user_role.name}" %>

<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">User Role Details</h5>
  </div>
  <div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-4">Name</dt>
      <dd class="col-sm-8"><%= @user_role.name %></dd>

      <dt class="col-sm-4">Created At</dt>
      <dd class="col-sm-8"><%= l(@user_role.created_at, format: :long) %></dd>
    </dl>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Edit", edit_organization_user_role_path(@user_role), class: "btn btn-outline-primary" %>
  <%= button_to "Delete", organization_user_role_path(@user_role), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  <%= link_to "Back", organization_user_roles_path, class: "btn btn-secondary ms-auto" %>
</div>
