<h2 class="mb-4 text-center">Sign Up</h2>

<div class="row justify-content-center">
  <div class="col-md-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card p-4 shadow-sm" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-6 mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control #{'is-invalid' if resource.errors[:name].present?}" %>
          <% if resource.errors[:name].present? %>
            <div class="invalid-feedback"><%= resource.errors[:name].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control #{'is-invalid' if resource.errors[:email].present?}" %>
          <% if resource.errors[:email].present? %>
            <div class="invalid-feedback"><%= resource.errors[:email].first %></div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :org_name, "Organization Name", class: "form-label" %>
          <%= f.text_field :org_name, class: "form-control #{'is-invalid' if resource.errors[:org_name].present?}" %>
          <% if resource.errors[:org_name].present? %>
            <div class="invalid-feedback"><%= resource.errors[:org_name].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password,
                autocomplete: "new-password",
                placeholder: (@minimum_password_length ? "Must be atleast #{@minimum_password_length} characters" : "Enter your password"),
                class: "form-control #{'is-invalid' if resource.errors[:password].present?}" %>
          <% if resource.errors[:password].present? %>
            <div class="invalid-feedback"><%= resource.errors[:password].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].present?}" %>
          <% if resource.errors[:password_confirmation].present? %>
            <div class="invalid-feedback"><%= resource.errors[:password_confirmation].first %></div>
          <% end %>
        </div>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
