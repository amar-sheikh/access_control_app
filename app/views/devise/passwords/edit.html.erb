<h2 class="mb-4 text-center">Change Your Password</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "New Password", class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted mb-2">
            (<%= @minimum_password_length %> characters minimum)
          </small>
        <% end %>
        <%= f.password_field :password,
              autofocus: true,
              autocomplete: "new-password",
              class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "form-control" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Change My Password", class: "btn btn-primary" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
