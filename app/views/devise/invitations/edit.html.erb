<h2 class="mb-4 text-center">Complete Your Profile</h2>

<div class="row justify-content-center">
  <div class="col-md-8">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>

      <%= f.hidden_field :invitation_token %>

      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='row'>
        <div class="co-6 mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control #{'is-invalid' if resource.errors[:name].present?}" %>
          <% if resource.errors[:name].present? %>
            <div class="invalid-feedback"><%= resource.errors[:name].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, readonly: true, class: "form-control-plaintext text-muted" %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :date_of_birth, class: "form-label" %>
          <%= f.date_field :date_of_birth,
                class: "form-control #{'is-invalid' if resource.errors[:date_of_birth].present?}",
                required: true
          %>
          <% if resource.errors[:date_of_birth].present? %>
            <div class="invalid-feedback"><%= resource.errors[:date_of_birth].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :phone, class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-control #{'is-invalid' if resource.errors[:phone].present?}" %>
          <% if resource.errors[:phone].present? %>
            <div class="invalid-feedback"><%= resource.errors[:phone].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control #{'is-invalid' if resource.errors[:password].present?}", autocomplete: "new-password" %>
          <% if resource.errors[:password].present? %>
            <div class="invalid-feedback"><%= resource.errors[:password].first %></div>
          <% end %>
        </div>

        <div class="col-6 mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].present?}", autocomplete: "new-password" %>
          <% if resource.errors[:password_confirmation].present? %>
            <div class="invalid-feedback"><%= resource.errors[:password_confirmation].first %></div>
          <% end %>
        </div>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Complete Signup", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>
